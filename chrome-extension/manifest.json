{
  "manifest_version": 3,
  "name": "GPdf - PDF 요약기",
  "version": "1.0.0",
  "description": "PDF 파일을 업로드하고 GPT-3.5로 요약하는 크롬 익스텐션",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GPdf - PDF 요약기",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
} 